<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<import type="android.view.View"/>
		<variable name="vm" type="com.lasthopesoftware.bluewater.client.playback.view.nowplaying.activity.NowPlayingViewModel"/>
	</data>

	<RelativeLayout
		android:id="@+id/rlViewCoverArt"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageView
			android:id="@+id/imgNowPlayingLoading"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:contentDescription="@string/img_now_playing_loading" />

		<ProgressBar
			android:id="@+id/pbLoadingImg"
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:indeterminate="true"
			app:isVisible="@{vm.isNowPlayingImageLoading}" />

		<ImageView
			android:id="@+id/imgNowPlaying"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			app:src="@{vm.nowPlayingImage}"
			android:scaleType="centerCrop"
			android:contentDescription="@string/img_now_playing"
			app:isVisible="@{!vm.isNowPlayingImageLoading}" />


	</RelativeLayout>
</layout>
