<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlMainFileInformation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">


            <ProgressBar
                android:id="@+id/pbLoadingFileThumbnail"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgFileThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:contentDescription="@string/lbl_track_img"/>
                <!--android:background="@drawable/drop_shadow"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlFileDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_below="@id/rlMainFileInformation">

        <!--<View-->
            <!--android:layout_width="10sp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/black_white_gradient"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:id="@+id/fileDetailsGradient"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFileName"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="1"
            android:fadingEdge="horizontal"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvArtist">
            <ProgressBar
                android:id="@+id/pbLoadingFileDetails"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <ListView
                android:id="@+id/lvFileDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

</LinearLayout>