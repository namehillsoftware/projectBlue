<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lasthopesoftware.jrmediastreamer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >

        <activity
            android:name=".BrowseLibrary"
            android:label="@string/title_activity_browse_library" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.jrmediastreamer.SetUpConnection"
            android:label="@string/title_activity_set_up_connection">
            
        </activity>
        
        <activity
            android:name=".ViewFiles"
            android:label="@string/title_activity_file_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.jrmediastreamer.BrowseLibrary" />
        </activity>
        
        <activity
            android:name=".ViewPlaylists"
            android:label="@string/title_activity_file_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.jrmediastreamer.BrowseLibrary" />
        </activity>

        <receiver android:name=".MusicIntentReceiver" >
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>

        <service android:name=".StreamingMusicService" android:enabled="true" android:exported="false">

            <intent-filter>
                <action android:name="com.lasthopesoftware.jrmediastreamer.ACTION_PAUSE" />
                <action android:name="com.lasthopesoftware.jrmediastreamer.ACTION_PLAY" />
                <action android:name="com.lasthopesoftware.jrmediastreamer.ACTION_STOP" />
                <action android:name="com.lasthopesoftware.jrmediastreamer.ACTION_START" />
                <action android:name="com.lasthopesoftware.jrmediastreamer.ACTION_SYSTEM_PAUSE" />
            </intent-filter>
            
        </service>

        <activity
            android:name=".ViewNowPlaying"
            android:label="@string/title_activity_view_now_playing"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.jrmediastreamer.ViewFiles" />
        </activity>
    </application>

</manifest>